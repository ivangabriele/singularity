{
  "name": "@singularity-ui/root",
  "description": "Yet another React UI.",
  "version": "0.13.0",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "demo",
    "dist"
  ],
  "scripts": {
    "build": "rm -Rf ./dist && rollup -c && sh ./scripts/build/copyPublicFiles.sh && node ./scripts/build/generatePackageJson.js",
    "dev": "start-storybook -p 6006",
    "prepare": "husky install",
    "test": "yarn test:lint",
    "test:lint": "eslint --ext js,jsx .",
    "watch": "yarn build && rollup -cw"
  },
  "dependencies": {
    "@babel/runtime": "^7.15.4",
    "@fontsource/poppins": "^4.5.0",
    "prop-types": "^15.7.2",
    "ramda": "^0.27.1",
    "react-feather": "^2.0.9",
    "react-paginate": "^7.1.3",
    "react-select": "^5.1.0",
    "sha1": "^1.1.1",
    "styled-components": "^5.3.1"
  },
  "devDependencies": {
    "@babel/core": "7.16.0",
    "@babel/plugin-transform-runtime": "7.16.0",
    "@babel/preset-env": "7.16.0",
    "@babel/preset-react": "7.16.0",
    "@ivangabriele/eslint-config-react": "1.5.0",
    "@ivangabriele/prettier-config": "1.1.0",
    "@rollup/plugin-babel": "5.3.0",
    "@rollup/plugin-commonjs": "21.0.1",
    "@rollup/plugin-node-resolve": "13.0.6",
    "@semantic-release/changelog": "6.0.1",
    "@semantic-release/exec": "6.0.2",
    "@semantic-release/git": "10.0.1",
    "@semantic-release/github": "8.0.2",
    "@storybook/addon-actions": "6.3.12",
    "@storybook/addon-essentials": "6.3.12",
    "@storybook/addon-links": "6.3.12",
    "@storybook/react": "6.3.12",
    "babel-loader": "8.2.3",
    "eslint-plugin-prettier": "4.0.0",
    "gh-pages": "3.2.3",
    "glob": "7.2.0",
    "husky": "7.0.4",
    "jabber": "1.2.2",
    "microbundle": "0.14.1",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "rollup": "2.59.0",
    "rollup-plugin-import-css": "3.0.2",
    "rollup-plugin-sizes": "1.0.4",
    "semantic-release": "18.0.0",
    "shelljs": "0.8.4"
  },
  "peerDependencies": {
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  },
  "prettier": "@ivangabriele/prettier-config",
  "eslintIgnore": [
    "/dist",
    "/storybook-static",
    "!/.storybook"
  ],
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/changelog",
      [
        "@semantic-release/npm",
        {
          "pkgRoot": "./dist"
        }
      ],
      "@semantic-release/github",
      [
        "@semantic-release/git",
        {
          "assets": [
            "CHANGELOG.md",
            "package.json",
            "yarn.lock"
          ],
          "message": "ci(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
        }
      ]
    ]
  }
}
