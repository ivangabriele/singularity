{
  "name": "@singularity/root",
  "description": "Yet another React UI.",
  "version": "2.2.1",
  "license": "MIT",
  "private": true,
  "main": "./index.ts",
  "scripts": {
    "build": "rm -Rf ./dist && rollup -c && yarn build:icons && yarn build:complete",
    "build:complete": "node ./scripts/build/removeFontsFromDeclarations.js && sh ./scripts/build/copyPublicFiles.sh && node ./scripts/build/generatePackageJson.js",
    "build:dev": "rm -Rf ./dist && rollup -c && yarn build:complete",
    "build:icons": "rm -Rf ./dist/icons/material && mkdirp ./dist/icons/material && cp ./icons/material/*.js ./dist/icons/material",
    "dev": "start-storybook -p 6006",
    "generate": "node -r dotenv/config ./scripts/icons/generateMaterialIcons.mjs",
    "prepare": "husky install",
    "test": "yarn test:lint && yarn test:type",
    "test:lint": "eslint --ext js,jsx,ts,tsx .",
    "test:type": "tsc --noEmit",
    "watch": "yarn build && rollup -cw"
  },
  "dependencies": {
    "better-prop-types": "1.1.1",
    "is-hotkey": "0.2.0",
    "ramda": "0.28.0",
    "react-select": "5.2.2",
    "remark-parse": "10.0.1",
    "remark-slate": "1.8.3",
    "sha1": "1.1.1",
    "slate": "0.72.3",
    "slate-history": "0.66.0",
    "slate-react": "0.72.6",
    "tslib": "2.3.1",
    "unified": "10.1.1"
  },
  "devDependencies": {
    "@babel/preset-react": "7.16.7",
    "@fontsource/poppins": "4.5.0",
    "@ivangabriele/commitlint-config": "ivangabriele/commitlint-config",
    "@ivangabriele/eslint-config-typescript-react": "2.1.4",
    "@ivangabriele/prettier-config": "2.0.2",
    "@ivangabriele/semantic-release-config-dist": "1.3.0",
    "@rollup/plugin-commonjs": "21.0.1",
    "@rollup/plugin-node-resolve": "13.1.3",
    "@rollup/plugin-replace": "3.0.1",
    "@rollup/plugin-typescript": "8.3.0",
    "@storybook/addon-actions": "6.4.16",
    "@storybook/addon-essentials": "6.4.16",
    "@storybook/addon-links": "6.4.16",
    "@storybook/react": "6.4.16",
    "@types/jabber": "1.2.0",
    "@types/ramda": "0.27.64",
    "@types/sha1": "1.1.3",
    "@types/styled-components": "5.1.21",
    "bhala": "2.1.0",
    "dumdum": "1.0.0-alpha.5",
    "eslint-plugin-prettier": "4.0.0",
    "gh-pages": "3.2.3",
    "glob": "7.2.0",
    "graceful-fs": "4.2.9",
    "husky": "7.0.4",
    "jabber": "1.2.2",
    "microbundle": "0.14.2",
    "ora": "6.0.1",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "rimraf": "3.0.2",
    "rollup": "2.66.0",
    "rollup-plugin-peer-deps-external": "2.2.4",
    "rollup-plugin-sizes": "1.0.4",
    "rollup-plugin-styles": "4.0.0",
    "styled-components": "5.3.3",
    "typescript": "4.5.5"
  },
  "peerDependencies": {
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "styled-components": "^5.3.3"
  },
  "prettier": "@ivangabriele/prettier-config",
  "eslintIgnore": [
    "/dist",
    "/storybook-static",
    "!/.storybook"
  ],
  "release": {
    "extends": "@ivangabriele/semantic-release-config-dist"
  }
}
